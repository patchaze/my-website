---
const navLinks = [
  { label: 'Destinations', href: '/destinations/' },
  { label: 'Services',     href: '/services/' },
  { label: 'About Us',     href: '/about-us/' },
  { label: 'Blog',      href: '/blog/' },
  { label: 'Contact',      href: '/contact/' },
];

const currentPath = new URL(Astro.request.url).pathname;
function isActive(href: string) {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="header" role="banner">
  <div class="container">
    <nav class="nav" aria-label="Main navigation">
      <!-- Logo -->
      <a href="/" class="nav__logo" aria-label="DURIAN Travel — Home">
        <span class="nav__logo-icon" aria-hidden="true">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="20" cy="20" r="19" fill="transparent" stroke="#C44B36" stroke-width="2"/>
            <text x="20" y="27" text-anchor="middle" font-family="'DM Serif Display',Georgia,serif" font-size="22" font-weight="400" fill="#C44B36">D</text>
          </svg>
        </span>
        <span class="nav__logo-text">
          <span class="nav__logo-brand">DURIAN</span>
          <span class="nav__logo-sub">Travel</span>
        </span>
      </a>

      <!-- Desktop links -->
      <ul class="nav__links" role="list">
        {navLinks.map(link => (
          <li>
            {link.href && link.href !== '/travel-planning/' ? (
              <a
                href={link.href}
                class={`nav__link ${isActive(link.href) ? 'nav__link--active' : ''}`}
                aria-current={isActive(link.href) ? 'page' : undefined}
              >
                {link.label}
              </a>
            ) : (
              <span class="nav__link" style="cursor: default; opacity: 0.6;">
                {link.label}
              </span>
            )}
          </li>
        ))}
      </ul>

      <!-- CTA -->
      <a href="/free-visa-audit/" class="nav__cta-btn">
        Book Call
      </a>

      <!-- Mobile toggle -->
      <button id="nav-toggle" class="nav__toggle-btn" aria-label="Toggle navigation" aria-expanded="false">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>

      <!-- Mobile menu -->
      <div id="nav-mobile" class="nav__mobile">
        <ul role="list">
          {navLinks.map(link => (
            <li>
              {link.href && link.href !== '/travel-planning/' ? (
                <a
                  href={link.href}
                  class={`nav__mobile-link ${isActive(link.href) ? 'nav__mobile-link--active' : ''}`}
                >
                  {link.label}
                </a>
              ) : (
                <span class="nav__mobile-link" style="opacity: 0.6;">
                  {link.label}
                </span>
              )}
            </li>
          ))}
          <li>
            <a href="/free-visa-audit/" class="nav__cta-btn w-full" style="margin-top:0.75rem;justify-content:center;display:flex">
              Book Call
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<style>
.header {
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
  background: rgba(15, 33, 56, 0.6);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: none;
}

.nav {
  display: flex;
  align-items: center;
  gap: var(--space-6);
  height: 64px;
  position: relative;
}

/* Logo */
.nav__logo {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  text-decoration: none;
  flex-shrink: 0;
}
.nav__logo-text { display: flex; flex-direction: column; line-height: 1.1; }
.nav__logo-brand {
  font-family: var(--font-serif);
  font-size: var(--text-xl);
  font-weight: 400;
  color: white;
  letter-spacing: 0.04em;
}
.nav__logo-sub {
  font-size: var(--text-xs);
  color: hsla(0,0%,100%,0.5);
  font-weight: var(--font-medium);
  font-style: italic;
}

/* Desktop nav links */
.nav__links {
  display: flex;
  align-items: center;
  gap: var(--space-1);
  flex: 1;
  justify-content: center;
}
.nav__link {
  display: inline-block;
  padding: var(--space-2) var(--space-4);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: hsla(0,0%,100%,0.75);
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  border-radius: var(--radius-md);
  transition: color var(--transition-fast);
}
.nav__link:hover        { color: white; }
.nav__link--active      { color: white; font-weight: var(--font-semibold); }

/* CTA Button — Coral pill */
.nav__cta-btn {
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  padding: var(--space-2) var(--space-5);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  text-transform: uppercase;
  letter-spacing: 0.06em;
  color: white;
  text-decoration: none;
  background: var(--color-accent);
  border: 2px solid var(--color-accent);
  border-radius: var(--radius-full);
  transition: background var(--transition-fast), border-color var(--transition-fast);
}
.nav__cta-btn:hover {
  background: var(--color-accent-dark);
  border-color: var(--color-accent-dark);
}

/* Mobile toggle button */
.nav__toggle-btn {
  display: none;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 4px;
  flex-direction: column;
  gap: 5px;
  z-index: 100;
}
.nav__toggle-btn .bar {
  display: block;
  width: 22px;
  height: 2px;
  background: white;
  border-radius: 2px;
  transition: all var(--transition-fast);
  transform-origin: left center;
}

/* Mobile menu */
.nav__mobile {
  display: none; /* hidden by default */
  position: absolute;
  top: calc(100% + 1px);
  left: 0;
  right: 0;
  background: var(--color-navy);
  border-bottom: 2px solid var(--color-accent);
  padding: var(--space-4);
  box-shadow: var(--shadow-lg);
  z-index: var(--z-dropdown);
}
.nav__mobile.is-open {
  display: block;
}

.nav__mobile ul { display: flex; flex-direction: column; gap: var(--space-1); }
.nav__mobile-link {
  display: block;
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  color: hsla(0,0%,100%,0.8);
  text-decoration: none;
  border-radius: var(--radius-md);
  transition: background var(--transition-fast), color var(--transition-fast);
}
.nav__mobile-link:hover       { background: hsla(0,0%,100%,0.08); color: white; }
.nav__mobile-link--active     { color: white; font-weight: var(--font-semibold); }

/* Mobile breakpoint */
@media (max-width: 900px) {
  .nav__links    { display: none; }
  .nav__cta-btn  { display: none; }
  .nav__toggle-btn { display: flex; }
  
  /* Hamburger to X animation */
  .nav__toggle-btn[aria-expanded="true"] .bar:nth-child(1) {
    transform: rotate(45deg);
  }
  .nav__toggle-btn[aria-expanded="true"] .bar:nth-child(2) {
    opacity: 0;
  }
  .nav__toggle-btn[aria-expanded="true"] .bar:nth-child(3) {
    transform: rotate(-45deg);
  }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById('nav-toggle');
    const mobileMenu = document.getElementById('nav-mobile');

    if (toggleBtn && mobileMenu) {
      toggleBtn.addEventListener('click', () => {
        const isExpanded = toggleBtn.getAttribute('aria-expanded') === 'true';
        toggleBtn.setAttribute('aria-expanded', !isExpanded);
        mobileMenu.classList.toggle('is-open');
      });
    }
  });
</script>
