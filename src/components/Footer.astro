---
const exploreLinks = [
  { label: 'Destinations', href: '/travel-planning/' },
  { label: 'Services',     href: '/services/' },
  { label: 'Journal',      href: '/blog/' },
];
const companyLinks = [
  { label: 'About Us',      href: '/about/' },
  { label: 'Team',          href: '/about/' },
  { label: 'Careers',       href: '/about/' },
];
const contactLinks = [
  { label: 'Book Call',     href: '/free-visa-audit/' },
  { label: 'Email Us',     href: '/contact/' },
  { label: 'FAQ',          href: '/faq/' },
];
const socialLinks = [
  { label: 'Instagram' },
  { label: 'Facebook' },
  { label: 'LinkedIn' },
];
const year = new Date().getFullYear();
---

<footer class="footer" role="contentinfo">
  <!-- Main footer -->
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid">

        <!-- Brand column -->
        <div class="footer__brand">
          <a href="/" class="footer__logo" aria-label="DURIAN Travel home">
            <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="18" cy="18" r="17" stroke="#C44B36" stroke-width="2"/>
              <text x="18" y="25" text-anchor="middle" font-family="'DM Serif Display',Georgia,serif" font-size="20" font-weight="400" fill="white">D</text>
            </svg>
            <span class="footer__logo-text">
              <span class="footer__logo-brand">DURIAN</span>
              <span class="footer__logo-sub">Travel</span>
            </span>
          </a>
        </div>

        <!-- Explore column -->
        <div class="footer__col">
          <h3 class="footer__col-title">Explore</h3>
          <ul role="list">
            {exploreLinks.map(link => (
              <li>
                {link.href && link.href !== '/travel-planning/' ? (
                  <a href={link.href} class="footer__link">{link.label}</a>
                ) : (
                  <span class="footer__link" style="cursor: default; opacity: 0.6;">{link.label}</span>
                )}
              </li>
            ))}
          </ul>
        </div>

        <!-- Company column -->
        <div class="footer__col">
          <h3 class="footer__col-title">Company</h3>
          <ul role="list">
            {companyLinks.map(link => (
              <li>
                {link.href ? (
                  <a href={link.href} class="footer__link">{link.label}</a>
                ) : (
                  <span class="footer__link" style="cursor: default; opacity: 0.6;">{link.label}</span>
                )}
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact column -->
        <div class="footer__col">
          <h3 class="footer__col-title">Contact</h3>
          <ul role="list">
            {contactLinks.map(link => (
              <li>
                {link.href ? (
                  <a href={link.href} class="footer__link">{link.label}</a>
                ) : (
                  <span class="footer__link" style="cursor: default; opacity: 0.6;">{link.label}</span>
                )}
              </li>
            ))}
          </ul>
        </div>

        <!-- Follow Us column -->
        <div class="footer__col">
          <h3 class="footer__col-title">Follow Us</h3>
          <ul role="list">
            {socialLinks.map(link => (
              <li>
                {link.href ? (
                  <a href={link.href} class="footer__link">{link.label}</a>
                ) : (
                  <span class="footer__link" style="cursor: default;">{link.label}</span>
                )}
              </li>
            ))}
          </ul>
        </div>

        <!-- Newsletter column -->
        <div class="footer__newsletter">
          <p class="footer__newsletter-label">Newsletter sign-up to receive our exclusive updates</p>
          <form class="footer__newsletter-form" onsubmit="return false;">
            <input type="email" placeholder="Email" class="footer__newsletter-input" aria-label="Email for newsletter" />
            <button type="submit" class="footer__newsletter-btn">Subscribe</button>
          </form>
        </div>

      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="footer__bottom">
    <div class="container flex-between" style="flex-wrap:wrap;gap:var(--space-3)">
      <p class="footer__copy">Â© {year} DURIAN Travel. All rights reserved.</p>
      <div class="footer__legal">
        <a href="/privacy-policy/" class="footer__legal-link">Privacy Policy</a>
        <a href="/terms-of-service/" class="footer__legal-link">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
.footer {
  background: var(--color-navy);
  color: hsla(0,0%,100%,0.75);
  border-top: 3px solid var(--color-accent);
}

.footer__main { padding-block: var(--space-12); }

.footer__grid {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr 1fr 1fr 1.5fr;
  gap: var(--space-8);
  align-items: start;
}
@media (max-width: 1000px) {
  .footer__grid { grid-template-columns: repeat(3, 1fr); gap: var(--space-6); }
  .footer__brand { grid-column: 1 / -1; }
  .footer__newsletter { grid-column: 1 / -1; }
}
@media (max-width: 600px) {
  .footer__grid { grid-template-columns: 1fr 1fr; }
}

/* Logo */
.footer__logo {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  text-decoration: none;
  color: white;
  margin-bottom: var(--space-4);
}
.footer__logo-text { display: flex; flex-direction: column; line-height: 1.1; }
.footer__logo-brand {
  font-family: var(--font-serif);
  font-size: var(--text-xl);
  font-weight: 400;
  color: white;
  letter-spacing: 0.04em;
}
.footer__logo-sub {
  font-size: var(--text-xs);
  color: hsla(0,0%,100%,0.45);
  font-style: italic;
}

/* Columns */
.footer__col-title {
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: white;
  margin-bottom: var(--space-4);
}
.footer__col ul { display: flex; flex-direction: column; gap: var(--space-3); }
.footer__link {
  font-size: var(--text-sm);
  color: hsla(0,0%,100%,0.6);
  text-decoration: none;
  transition: color var(--transition-fast);
}
.footer__link:hover { color: white; }

/* Newsletter */
.footer__newsletter-label {
  font-size: var(--text-xs);
  color: hsla(0,0%,100%,0.55);
  margin-bottom: var(--space-3);
  line-height: var(--leading-relaxed);
}
.footer__newsletter-form {
  display: flex;
  gap: 0;
}
.footer__newsletter-input {
  flex: 1;
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-sm);
  background: hsla(0,0%,100%,0.08);
  border: 1px solid hsla(0,0%,100%,0.2);
  border-right: none;
  border-radius: var(--radius-sm) 0 0 var(--radius-sm);
  color: white;
  outline: none;
}
.footer__newsletter-input::placeholder { color: hsla(0,0%,100%,0.35); }
.footer__newsletter-input:focus { border-color: var(--color-accent); }
.footer__newsletter-btn {
  padding: var(--space-2) var(--space-4);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  text-transform: uppercase;
  letter-spacing: 0.06em;
  background: var(--color-accent);
  color: white;
  border: 1px solid var(--color-accent);
  border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
  cursor: pointer;
  transition: background var(--transition-fast);
}
.footer__newsletter-btn:hover { background: var(--color-accent-dark); }

/* Bottom bar */
.footer__bottom {
  border-top: 1px solid hsla(0,0%,100%,0.1);
  padding: var(--space-4) 0;
}
.footer__copy { font-size: var(--text-xs); color: hsla(0,0%,100%,0.35); }
.footer__legal { display: flex; gap: var(--space-4); }
.footer__legal-link {
  font-size: var(--text-xs);
  color: hsla(0,0%,100%,0.35);
  text-decoration: none;
  transition: color var(--transition-fast);
}
.footer__legal-link:hover { color: white; }
</style>
