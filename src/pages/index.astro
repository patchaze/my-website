---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import CTABanner from '../components/CTABanner.astro';

const expertise = [
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#D85F4A" stroke-width="2"/><path d="M24 14v6l4 4" stroke="#D85F4A" stroke-width="2" stroke-linecap="round"/><path d="M16 30h16M18 34h12" stroke="#D85F4A" stroke-width="1.5" stroke-linecap="round"/></svg>`,
    title: 'Bespoke Itineraries',
    desc: 'Tailor-made travel plans designed around your unique interests and pace.',
    link: '/services/itinerary-building/',
    linkText: 'Learn More',
    tags: ['Custom', 'Planning'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#D85F4A" stroke-width="2"/><rect x="16" y="18" width="16" height="12" rx="2" stroke="#D85F4A" stroke-width="2"/><path d="M20 18v-2a4 4 0 018 0v2" stroke="#D85F4A" stroke-width="2"/></svg>`,
    title: 'Curated Stays',
    desc: 'Hand-selected boutique hotels, private villas, and exclusive resorts.',
    link: '/services/',
    linkText: 'Discover Accommodations',
    tags: ['Hotels', 'Villas'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#D85F4A" stroke-width="2"/><path d="M16 20c0-4 3.5-6 8-6s8 2 8 6c0 6-8 12-8 12s-8-6-8-12z" stroke="#D85F4A" stroke-width="2"/></svg>`,
    title: 'Cultural Experiences',
    desc: 'Private dining, chef\'s tables, and authentic local food tours.',
    link: '/services/',
    linkText: 'See Offerings',
    tags: ['Food', 'Culture'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#D85F4A" stroke-width="2"/><path d="M24 16v16M16 24h16" stroke="#D85F4A" stroke-width="2" stroke-linecap="round"/><circle cx="24" cy="24" r="6" stroke="#D85F4A" stroke-width="1.5"/></svg>`,
    title: 'Exclusive Access',
    desc: 'VIP entry, behind-the-scenes tours, and personal travel guides.',
    link: '/services/',
    linkText: 'Find Out How',
    tags: ['VIP', 'Exclusive'],
  },
];

const processSteps = [
  { num: '1', title: 'CONSULTATION', desc: 'Initial discussion to understand your travel desires and preferences.' },
  { num: '2', title: 'DESIGN', desc: 'We craft a personalised itinerary with unique experiences and accommodations.' },
  { num: '3', title: 'REFINE', desc: 'Collaboration to perfect every detail of your journey.' },
  { num: '4', title: 'EXPERIENCE', desc: 'Enjoy a seamless, stress-free trip with 24/7 support.' },
];

const recentPosts = [
  { title: 'Planning Your First Europe Trip', description: 'A complete guide to budgeting, routing, and booking your first European adventure.', slug: 'planning-first-europe-trip', pubDate: '2026-02-01', tags: ['Planning', 'Europe'], readTime: 8 },
  { title: 'How to Write a Visa Cover Letter', description: 'A strategic guide to writing a cover letter that communicates purpose and ties.', slug: 'how-to-write-visa-cover-letter', pubDate: '2026-02-10', tags: ['Visa', 'Strategy'], readTime: 7 },
  { title: 'Packing for Europe: The Only List You Need', description: 'Carry-on vs check-in, liquids, electronics, medications — all covered.', slug: 'packing-europe-list', pubDate: '2026-02-15', tags: ['Packing', 'Tips'], readTime: 6 },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What does DURIAN Travel do?",
      "acceptedAnswer": { "@type": "Answer", "text": "DURIAN Travel is a travel planning consultancy. We build complete trip plans, coordinate accommodation, create checklists, and provide 1-on-1 consultancy. We also help with Schengen visa document preparation." }
    },
    {
      "@type": "Question",
      "name": "Do you book flights and hotels for me?",
      "acceptedAnswer": { "@type": "Answer", "text": "We research and recommend the best options for your budget and route. We can coordinate bookings or guide you through doing it yourself — whichever you prefer." }
    },
    {
      "@type": "Question",
      "name": "How fast do you respond?",
      "acceptedAnswer": { "@type": "Answer", "text": "We respond within hours, not days. For active clients, we maintain ongoing communication throughout the planning process." }
    },
    {
      "@type": "Question",
      "name": "Can you help with my Schengen visa?",
      "acceptedAnswer": { "@type": "Answer", "text": "Yes — visa document review is one of our services. We check your documents, flag gaps, and help you prepare a strong application. We are not lawyers and do not guarantee approval." }
    },
    {
      "@type": "Question",
      "name": "How much do your services cost?",
      "acceptedAnswer": { "@type": "Answer", "text": "Services start from €29 for a document checklist review. Full trip planning and consultancy packages are available. Book a free 15-minute call to discuss your needs." }
    }
  ]
};
---

<BaseLayout
  title="DURIAN — Europe Travel Planning, Accommodation & Consultancy"
  description="We plan trips, find accommodation, build checklists, and respond fast. Europe travel consultancy with visa support."
  schema={faqSchema}
>

  <!-- HERO — Photo background like mockup -->
  <section class="hero" aria-labelledby="hero-heading">
    <div class="hero__bg">
      <img src="/images/hero-europe.png" alt="European coastal town at sunset" width="1600" height="900" loading="eager" />
      <div class="hero__overlay"></div>
    </div>
    <div class="container hero__container">
      <div class="hero__content">
        <h1 id="hero-heading" class="hero__title">
          We Plan Your Trip.<br />
          <span class="hero__title-accent">Every Single Detail.</span>
        </h1>
        <p class="hero__subtitle">
          Experience the world with bespoke itineraries, curated accommodations,
          and exclusive access. Your journey, perfectly crafted.
        </p>
        <div class="hero__actions">
          <a href="/services/" class="hero__btn hero__btn--outline">Explore Our Services</a>
          <a href="/free-visa-audit/" class="hero__btn hero__btn--coral">Start Planning</a>
        </div>
      </div>
    </div>
  </section>

  <!-- OUR EXPERTISE — 4 cards with circular icons -->
  <section class="section" aria-labelledby="expertise-heading">
    <div class="container">
      <header class="section-header text-center">
        <span class="section-label">Our Expertise</span>
      </header>
      <div class="expertise-grid">
        {expertise.map(e => (
          <div class="expertise-card">
            <div class="expertise-card__icon" set:html={e.icon}></div>
            <h3 class="expertise-card__title">{e.title}</h3>
            <p class="expertise-card__desc">{e.desc}</p>
            <div class="expertise-card__tags">
              {e.tags.map(t => <span class="expertise-tag">{t}</span>)}
            </div>
            <a href={e.link} class="expertise-card__link">{e.linkText} →</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- THE DURIAN PROCESS — Large numbers -->
  <section class="section section--alt" aria-labelledby="process-heading">
    <div class="container">
      <header class="section-header text-center">
        <span class="section-label">The DURIAN Process</span>
      </header>
      <div class="process-grid">
        {processSteps.map(step => (
          <div class="process-step">
            <span class="process-step__num">{step.num}</span>
            <div class="process-step__content">
              <h3 class="process-step__title">{step.title}</h3>
              <p class="process-step__desc">{step.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS — Dark background, centered serif -->
  <section class="testimonials-dark" aria-labelledby="testimonials-heading">
    <div class="container">
      <header class="text-center" style="margin-bottom:var(--space-8)">
        <span class="section-label" style="color:var(--color-accent)">What Our Clients Say</span>
      </header>
      <blockquote class="testimonial-hero">
        <p class="testimonial-hero__quote">
          "DURIAN Travel curated an unforgettable honeymoon for us in Japan. Every single detail, from the private tea ceremony to the ryokan stay, was flawless. We felt completely taken care of."
        </p>
        <footer class="testimonial-hero__footer">
          <strong>Emily & James, London</strong>
        </footer>
        <div class="testimonial-hero__dots">
          <span class="dot dot--active"></span>
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
      </blockquote>
    </div>
  </section>

  <!-- BLOG PREVIEW -->
  <section class="section" aria-labelledby="blog-heading">
    <div class="container">
      <header class="section-header">
        <div class="flex-between" style="flex-wrap:wrap;gap:var(--space-4)">
          <div>
            <span class="section-label">Latest Insights</span>
            <h2 id="blog-heading" class="section-title">From the Journal</h2>
          </div>
          <a href="/blog/" class="btn btn--secondary">View All Posts →</a>
        </div>
      </header>
      <div class="grid-3">
        {recentPosts.map(p => <BlogCard {...p} />)}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section section--alt" aria-labelledby="faq-heading">
    <div class="container container--narrow">
      <header class="section-header text-center">
        <span class="section-label">FAQ</span>
        <h2 id="faq-heading" class="section-title">Common Questions</h2>
      </header>
      <div class="faq-list">
        <details class="faq-item">
          <summary class="faq-item__q">What does DURIAN Travel actually do?</summary>
          <p class="faq-item__a">We're a travel planning consultancy. We build complete trip plans — itinerary, accommodation, transport, checklists, budgets — and provide 1-on-1 support throughout. We also help with Schengen visa document preparation.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">Do you book flights and hotels?</summary>
          <p class="faq-item__a">We research and recommend the best options for your budget and route. We can coordinate bookings or guide you through doing it yourself — whichever you prefer.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">How fast do you respond?</summary>
          <p class="faq-item__a">Within hours. Active clients have direct access to our team. No ticketing systems, no waiting days for a reply.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">Can you help with my Schengen visa?</summary>
          <p class="faq-item__a">Yes — visa document review is one of our services. We check your documents, flag gaps, and help you prepare. We're not lawyers and don't guarantee approval, but we make sure your application is as strong as possible.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">How much do your services cost?</summary>
          <p class="faq-item__a">Services start from €29. Full trip planning packages depend on the complexity of your trip. Book a free 15-minute call and we'll give you a clear quote.</p>
        </details>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTABanner
    title="Ready to plan your trip?"
    subtitle="Book a free 15-minute call. Tell us where you want to go — we'll show you what we can do."
    cta="Book Free Call"
  />

</BaseLayout>

<style>
/* ══════════════════════════════════════════
   HERO — Photo background
   ══════════════════════════════════════════ */
.hero {
  position: relative;
  min-height: 520px;
  display: flex;
  align-items: center;
  color: white;
  overflow: hidden;
}
.hero__bg {
  position: absolute;
  inset: 0;
  z-index: 0;
}
.hero__bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center 30%;
}
.hero__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(15, 33, 56, 0.82) 0%,
    rgba(27, 58, 92, 0.6) 50%,
    rgba(15, 33, 56, 0.4) 100%
  );
}
.hero__container {
  position: relative;
  z-index: 1;
  padding-block: var(--space-20);
}
.hero__content {
  max-width: 600px;
}
.hero__title {
  font-family: var(--font-serif);
  font-size: clamp(2.2rem, 5vw, 3.5rem);
  font-weight: 400;
  line-height: 1.15;
  margin-bottom: var(--space-5);
  color: white;
}
.hero__title-accent {
  color: var(--color-accent);
  font-style: italic;
}
.hero__subtitle {
  font-size: clamp(var(--text-base), 2vw, var(--text-lg));
  color: hsla(0,0%,100%,0.8);
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-8);
  max-width: 48ch;
}
.hero__actions {
  display: flex;
  gap: var(--space-4);
  flex-wrap: wrap;
}
.hero__btn {
  display: inline-flex;
  align-items: center;
  padding: var(--space-3) var(--space-6);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  text-decoration: none;
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
  text-transform: uppercase;
  letter-spacing: 0.06em;
}
.hero__btn--outline {
  color: white;
  border: 2px solid white;
  background: transparent;
}
.hero__btn--outline:hover {
  background: hsla(0,0%,100%,0.15);
}
.hero__btn--coral {
  color: white;
  background: var(--color-accent);
  border: 2px solid var(--color-accent);
}
.hero__btn--coral:hover {
  background: var(--color-accent-dark);
  border-color: var(--color-accent-dark);
}

/* ══════════════════════════════════════════
   OUR EXPERTISE — Circular icon cards
   ══════════════════════════════════════════ */
.expertise-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-6);
}
@media (max-width: 900px) { .expertise-grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 560px) { .expertise-grid { grid-template-columns: 1fr; } }

.expertise-card {
  text-align: center;
  padding: var(--space-6) var(--space-4);
}
.expertise-card__icon {
  display: flex;
  justify-content: center;
  margin-bottom: var(--space-4);
}
.expertise-card__title {
  font-family: var(--font-serif);
  font-size: var(--text-lg);
  font-weight: 400;
  color: var(--color-text);
  margin-bottom: var(--space-3);
}
.expertise-card__desc {
  font-size: var(--text-sm);
  color: var(--color-text-muted);
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-4);
}
.expertise-card__tags {
  display: flex;
  justify-content: center;
  gap: var(--space-2);
  margin-bottom: var(--space-3);
}
.expertise-tag {
  display: inline-block;
  padding: 2px var(--space-3);
  font-size: var(--text-xs);
  color: var(--color-accent);
  border: 1px solid var(--color-accent);
  border-radius: var(--radius-full);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}
.expertise-card__link {
  display: inline-block;
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  color: var(--color-accent);
  text-decoration: none;
  transition: color var(--transition-fast);
}
.expertise-card__link:hover { color: var(--color-accent-dark); }

/* ══════════════════════════════════════════
   DURIAN PROCESS — Large serif numbers
   ══════════════════════════════════════════ */
.section--alt { background: var(--color-bg-alt); }

.process-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-6);
}
@media (max-width: 768px) { .process-grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 480px) { .process-grid { grid-template-columns: 1fr; } }

.process-step {
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
}
.process-step__num {
  font-family: var(--font-serif);
  font-size: 3.5rem;
  font-weight: 400;
  color: var(--color-accent);
  line-height: 1;
  flex-shrink: 0;
}
.process-step__content {
  padding-top: var(--space-2);
}
.process-step__title {
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  color: var(--color-primary);
  text-transform: uppercase;
  letter-spacing: 0.08em;
  margin-bottom: var(--space-2);
}
.process-step__desc {
  font-size: var(--text-sm);
  color: var(--color-text-muted);
  line-height: var(--leading-relaxed);
}

/* ══════════════════════════════════════════
   TESTIMONIALS — Dark section
   ══════════════════════════════════════════ */
.testimonials-dark {
  background: var(--color-navy);
  padding-block: var(--space-16);
  border-top: 3px solid var(--color-accent);
}
.testimonial-hero {
  text-align: center;
  max-width: 680px;
  margin-inline: auto;
}
.testimonial-hero__quote {
  font-family: var(--font-serif);
  font-size: clamp(var(--text-lg), 2.5vw, var(--text-2xl));
  font-weight: 400;
  font-style: italic;
  color: white;
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-6);
}
.testimonial-hero__footer {
  color: hsla(0,0%,100%,0.65);
  font-size: var(--text-sm);
  margin-bottom: var(--space-6);
}
.testimonial-hero__dots {
  display: flex;
  justify-content: center;
  gap: var(--space-2);
}
.dot {
  width: 10px;
  height: 10px;
  border-radius: var(--radius-full);
  background: hsla(0,0%,100%,0.25);
  transition: background var(--transition-fast);
}
.dot--active { background: var(--color-accent); }

/* ══════════════════════════════════════════
   FAQ
   ══════════════════════════════════════════ */
.faq-list { display: flex; flex-direction: column; gap: var(--space-3); }
.faq-item {
  background: white;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  overflow: hidden;
}
.faq-item__q {
  padding: var(--space-5) var(--space-6);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-text);
  cursor: pointer;
  list-style: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.faq-item__q::after { content: '+'; font-size: var(--text-xl); color: var(--color-accent); font-weight: var(--font-bold); }
.faq-item[open] .faq-item__q::after { content: '−'; }
.faq-item__q::-webkit-details-marker { display: none; }
.faq-item__a {
  padding: 0 var(--space-6) var(--space-5);
  font-size: var(--text-sm);
  line-height: var(--leading-relaxed);
  color: var(--color-text-muted);
}

/* ══════════════════════════════════════════
   Grid utilities
   ══════════════════════════════════════════ */
.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-6);
}
@media (max-width: 640px) { .grid-2 { grid-template-columns: 1fr; } }
</style>
