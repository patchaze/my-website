<style>
/* Hero */
.hero { padding-block: var(--space-20); color: white; }
.hero-gradient {
  background: linear-gradient(135deg, hsl(152, 40%, 12%) 0%, hsl(152, 55%, 22%) 50%, hsl(165, 45%, 18%) 100%);
}
.hero__inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-16);
  align-items: center;
}
@media (max-width: 860px) {
  .hero__inner { grid-template-columns: 1fr; }
  .hero__visual { display: none; }
}
.hero__badge { margin-bottom: var(--space-5); }
.hero__title {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: var(--font-extrabold);
  line-height: 1.15;
  margin-bottom: var(--space-5);
  color: white;
}
.hero__title-accent { color: var(--color-accent); }
.hero__subtitle {
  font-size: clamp(var(--text-lg), 2vw, var(--text-xl));
  color: hsl(215 25% 78%);
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-8);
  max-width: 52ch;
}
.hero__actions { display: flex; gap: var(--space-4); flex-wrap: wrap; margin-bottom: var(--space-8); }
.hero__trust {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  font-size: var(--text-sm);
  color: hsl(215 20% 65%);
}
.hero__stars { color: var(--color-accent); font-size: var(--text-lg); }

/* Hero visual */
.hero__visual { display: flex; justify-content: center; align-items: center; }
.hero__card-stack { display: flex; flex-direction: column; gap: var(--space-3); width: 100%; max-width: 320px; }
.hero__doc-card {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  background: hsl(215 30% 98% / 0.08);
  backdrop-filter: blur(10px);
  border: 1px solid hsl(215 30% 100% / 0.15);
  border-radius: var(--radius-xl);
  padding: var(--space-4) var(--space-5);
  transition: transform var(--transition-normal);
}
.hero__doc-card:hover { transform: translateX(4px); }
.hero__doc-card--1 { animation: slideIn 0.5s ease 0s both; }
.hero__doc-card--2 { animation: slideIn 0.5s ease 0.1s both; }
.hero__doc-card--3 { animation: slideIn 0.5s ease 0.2s both; }
.hero__doc-card--4 { animation: slideIn 0.5s ease 0.3s both; }
@keyframes slideIn { from { opacity:0; transform:translateX(20px); } to { opacity:1; transform:translateX(0); } }
.hero__doc-icon { font-size: 1.5rem; }
.hero__doc-text { display: flex; flex-direction: column; gap: 2px; color: white; font-size: var(--text-sm); font-weight: var(--font-medium); }
.hero__doc-status { font-size: var(--text-xs); }
.hero__doc-status--ok   { color: hsl(145 55% 65%); }
.hero__doc-status--warn { color: var(--color-accent-light); }

/* Strengths grid */
.strengths-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-6);
}
@media (max-width: 768px) { .strengths-grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 480px) { .strengths-grid { grid-template-columns: 1fr; } }
.strength-card {
  background: white;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  text-align: center;
  transition: box-shadow var(--transition-normal), transform var(--transition-normal);
}
.strength-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); }
.strength-card__icon { font-size: 2rem; display: block; margin-bottom: var(--space-3); }
.strength-card__title { font-size: var(--text-base); font-weight: var(--font-bold); color: var(--color-text); margin-bottom: var(--space-2); }
.strength-card__desc { font-size: var(--text-sm); color: var(--color-text-muted); line-height: var(--leading-relaxed); }

/* Process grid */
.process-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-6);
}
@media (max-width: 768px) { .process-grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 480px) { .process-grid { grid-template-columns: 1fr; } }
.process-card {
  background: white;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  text-align: center;
  transition: box-shadow var(--transition-normal), transform var(--transition-normal);
}
.process-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); }
.process-card__num {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  border-radius: var(--radius-full);
  background: var(--color-primary);
  color: white;
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  margin-bottom: var(--space-4);
}
.process-card__title { font-size: var(--text-lg); font-weight: var(--font-semibold); color: var(--color-text); margin-bottom: var(--space-2); }
.process-card__desc { font-size: var(--text-sm); color: var(--color-text-muted); line-height: var(--leading-relaxed); }

/* Fast response banner */
.fast-banner {
  background: var(--color-navy);
  color: white;
  padding-block: var(--space-12);
}
.fast-banner__inner {
  display: flex;
  align-items: center;
  gap: var(--space-8);
}
@media (max-width: 640px) {
  .fast-banner__inner { flex-direction: column; text-align: center; }
}
.fast-banner__icon { font-size: 3rem; flex-shrink: 0; }
.fast-banner__title { font-size: var(--text-2xl); font-weight: var(--font-bold); margin-bottom: var(--space-2); }
.fast-banner__text { font-size: var(--text-base); color: hsl(215 20% 72%); line-height: var(--leading-relaxed); max-width: 55ch; }

/* Checklist preview */
.checklist-preview {
  list-style: none;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}
.checklist-preview li {
  font-size: var(--text-base);
  line-height: var(--leading-relaxed);
  color: var(--color-text);
}

/* Testimonials */
.testimonial-card {
