---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import CTABanner from '../components/CTABanner.astro';
import { Image } from 'astro:assets';
import heroImg from '../assets/images/hero-dramatic-4k.jpg';
import amalfiImg from '../assets/images/card-amalfi.png';
import alpsImg from '../assets/images/card-alps.png';

const expertise = [
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#C44B36" stroke-width="2"/><path d="M24 14v6l4 4" stroke="#C44B36" stroke-width="2" stroke-linecap="round"/><path d="M16 30h16M18 34h12" stroke="#C44B36" stroke-width="1.5" stroke-linecap="round"/></svg>`,
    title: 'Bespoke Itineraries',
    desc: 'Tailor-made travel plans designed around your unique interests and pace.',
    link: '/services/itinerary-building/',
    linkText: 'Learn More',
    tags: ['Custom', 'Planning'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#C44B36" stroke-width="2"/><rect x="16" y="18" width="16" height="12" rx="2" stroke="#C44B36" stroke-width="2"/><path d="M20 18v-2a4 4 0 018 0v2" stroke="#C44B36" stroke-width="2"/></svg>`,
    title: 'Curated Stays',
    desc: 'Hand-selected boutique hotels, private villas, and exclusive resorts.',
    link: '/services/',
    linkText: 'Discover Accommodations',
    tags: ['Hotels', 'Villas'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#C44B36" stroke-width="2"/><path d="M16 20c0-4 3.5-6 8-6s8 2 8 6c0 6-8 12-8 12s-8-6-8-12z" stroke="#C44B36" stroke-width="2"/></svg>`,
    title: 'Cultural Experiences',
    desc: 'Private dining, chef\'s tables, and authentic local food tours.',
    link: '/services/',
    linkText: 'See Offerings',
    tags: ['Food', 'Culture'],
  },
  {
    icon: `<svg width="48" height="48" viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="23" stroke="#C44B36" stroke-width="2"/><path d="M24 16v16M16 24h16" stroke="#C44B36" stroke-width="2" stroke-linecap="round"/><circle cx="24" cy="24" r="6" stroke="#C44B36" stroke-width="1.5"/></svg>`,
    title: 'Exclusive Access',
    desc: 'VIP entry, behind-the-scenes tours, and personal travel guides.',
    link: '/services/',
    linkText: 'Find Out How',
    tags: ['VIP', 'Exclusive'],
  },
];

const processSteps = [
  { letter: 'D', title: 'Documentation', desc: 'Meticulous review and preparation of your visa application documents.' },
  { letter: 'U', title: 'Understanding', desc: 'In-depth analysis of your travel goals and personal circumstances.' },
  { letter: 'R', title: 'Regulatory', desc: 'Up-to-the-minute compliance with evolving immigration laws and embassy rules.' },
  { letter: 'I', title: 'Insight', desc: 'Strategic guidance based on years of cross-border travel expertise.' },
  { letter: 'A', title: 'Advisory', desc: 'Personalised recommendations to strengthen your case and avoid common pitfalls.' },
  { letter: 'N', title: 'Network', desc: 'Connection to our global ecosystem of luxury stays and local fixers.' },
];

const testimonials = [
  {
    quote: "DURIAN Travel curated an unforgettable honeymoon for us in Japan. Every detail, from private tea ceremonies to ryokan stays, was flawless.",
    author: "Emily & James, London"
  },
  {
    quote: "The document review saved my application. They caught a crucial error in my sponsorship proof that would have definitely led to a refusal.",
    author: "Sarah M., New York"
  },
  {
    quote: "Fast response times and deep local knowledge. They didn't just book hotels; they built a story for our family trip to Portugal.",
    author: "Mark T., Sydney"
  }
];

const recentPosts = [
  { title: 'Planning Your First Europe Trip', description: 'A complete guide to budgeting, routing, and booking your first European adventure.', slug: 'planning-first-europe-trip', pubDate: '2026-02-01', tags: ['Planning', 'Europe'], readTime: 8 },
  { title: 'How to Write a Visa Cover Letter', description: 'A strategic guide to writing a cover letter that communicates purpose and ties.', slug: 'how-to-write-visa-cover-letter', pubDate: '2026-02-10', tags: ['Visa', 'Strategy'], readTime: 7 },
  { title: 'Packing for Europe: The Only List You Need', description: 'Carry-on vs check-in, liquids, electronics, medications â€” all covered.', slug: 'packing-europe-list', pubDate: '2026-02-15', tags: ['Packing', 'Tips'], readTime: 6 },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What does DURIAN Travel do?",
      "acceptedAnswer": { "@type": "Answer", "text": "DURIAN Travel is a travel planning consultancy. We build complete trip plans, coordinate accommodation, create checklists, and provide 1-on-1 consultancy. We also help with Schengen visa document preparation." }
    },
    {
      "@type": "Question",
      "name": "Do you book flights and hotels for me?",
      "acceptedAnswer": { "@type": "Answer", "text": "We research and recommend the best options for your budget and route. We can coordinate bookings or guide you through doing it yourself â€” whichever you prefer." }
    },
    {
      "@type": "Question",
      "name": "How fast do you respond?",
      "acceptedAnswer": { "@type": "Answer", "text": "We respond within hours, not days. For active clients, we maintain ongoing communication throughout the planning process." }
    },
    {
      "@type": "Question",
      "name": "Can you help with my Schengen visa?",
      "acceptedAnswer": { "@type": "Answer", "text": "Yes â€” visa document review is one of our services. We check your documents, flag gaps, and help you prepare a strong application. We are not lawyers and do not guarantee approval." }
    },
    {
      "@type": "Question",
      "name": "How much do your services cost?",
      "acceptedAnswer": { "@type": "Answer", "text": "Services start from â‚¬29 for a document checklist review. Full trip planning and consultancy packages are available. Book a free 15-minute call to discuss your needs." }
    }
  ]
};
---

<BaseLayout
  title="DURIAN â€” Europe Travel Planning, Accommodation & Consultancy"
  description="We plan trips, find accommodation, build checklists, and respond fast. Europe travel consultancy with visa support."
  schema={faqSchema}
>

  <!-- HERO â€” Full-bleed with floating glass cards -->
  <section class="hero" aria-labelledby="hero-heading">
    <div class="hero__bg-full">
      <Image src={heroImg} alt="Dramatic Dolomites mountain landscape at sunset" width={1920} loading="eager" />
      <div class="hero__overlay-dark"></div>
    </div>
    
    <div class="container hero__grid">
      <!-- Left: Content Overlay -->
      <div class="hero__info">
        <div class="hero__badge">
          <span class="hero__badge-icon">ğŸ“</span>
          EUROPE TRAVEL
        </div>
        <h1 id="hero-heading" class="hero__title">
          The Journey Beyond<br />
          <span class="hero__title-glow">Your Imaginary.</span>
        </h1>
        <p class="hero__description">
          Experience the world with bespoke itineraries, curated accommodations,
          and exclusive access. Your journey, perfectly crafted.
        </p>
        <div class="hero__buttons">
          <a href="/services/" class="btn-primary">Explore Now</a>
        </div>
      </div>

      <!-- Right: Floating Glass Cards -->
      <div class="hero__visuals">
        <a href="/destinations/italy/" class="glass-card glass-card--1 hero-link" aria-label="Explore Italy">
          <Image src={amalfiImg} alt="Positano, Amalfi Coast" width={300} height={400} />
          <div class="glass-card__info">
            <p class="glass-card__location">ğŸ“ Amalfi Coast, Italy</p>
          </div>
          <div class="hero-link-overlay"><span class="explore-btn">Explore Italy</span></div>
        </a>
        <a href="/destinations/switzerland/" class="glass-card glass-card--2 hero-link" aria-label="Explore Switzerland">
          <Image src={alpsImg} alt="Swiss Alps turquoise lake" width={300} height={400} />
          <div class="glass-card__info">
            <p class="glass-card__location">ğŸ“ Swiss Alps, Switzerland</p>
          </div>
          <div class="hero-link-overlay"><span class="explore-btn">Explore Switzerland</span></div>
        </a>
      </div>
    </div>

  </section>

  <!-- OUR EXPERTISE â€” 4 cards with circular icons -->
  <section class="section" aria-labelledby="expertise-heading">
    <div class="container">
      <header class="section-header text-center">
        <span class="section-label">Our Expertise</span>
      </header>
      <div class="expertise-grid">
        {expertise.map(e => (
          <div class="expertise-card">
            <div class="expertise-card__icon" set:html={e.icon}></div>
            <h3 class="expertise-card__title">{e.title}</h3>
            <p class="expertise-card__desc">{e.desc}</p>
            <div class="expertise-card__tags">
              {e.tags.map(t => <span class="expertise-tag">{t}</span>)}
            </div>
            <a href={e.link} class="expertise-card__link">{e.linkText} â†’</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- THE DURIAN PROCESS â€” Large numbers -->
  <section class="section section--alt" aria-labelledby="process-heading">
    <div class="container">
      <header class="section-header text-center">
        <span class="section-label">The DURIAN Process</span>
      </header>
      <div class="process-grid">
        {processSteps.map(step => (
          <div class="process-step">
            <span class="process-step__num">{step.letter}</span>
            <div class="process-step__content">
              <h3 class="process-step__title">{step.title}</h3>
              <p class="process-step__desc">{step.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS â€” Dark background, centered serif -->
  <section class="testimonials-dark" aria-labelledby="testimonials-heading">
    <div class="container">
      <header class="text-center" style="margin-bottom:var(--space-8)">
        <span class="section-label" style="color:var(--color-accent)">What Our Clients Say</span>
      </header>
      <div class="testimonial-slider">
        <div class="testimonial-track" id="testimonial-track">
          {testimonials.map((t, i) => (
            <div class="testimonial-slide" id={`testimonial-${i}`}>
              <blockquote class="testimonial-hero">
                <p class="testimonial-hero__quote">"{t.quote}"</p>
                <footer class="testimonial-hero__footer">
                  <strong>{t.author}</strong>
                </footer>
              </blockquote>
            </div>
          ))}
        </div>
        <div class="testimonial-hero__dots">
          {testimonials.map((_, i) => (
             <button 
               class="testimonial-dot" 
               aria-label={`Go to slide ${i + 1}`}
               data-slide={i}
             ></button>
          ))}
        </div>
      </div>

      <script is:inline>
        document.querySelectorAll('.testimonial-dot').forEach(dot => {
          dot.addEventListener('click', () => {
            const slideId = `testimonial-${dot.dataset.slide}`;
            const track = document.getElementById('testimonial-track');
            const slide = document.getElementById(slideId);
            if (track && slide) {
              track.scrollTo({
                left: slide.offsetLeft,
                behavior: 'smooth'
              });
            }
            
            // Update active state
            document.querySelectorAll('.testimonial-dot').forEach(d => d.classList.remove('active'));
            dot.classList.add('active');
          });
        });
        
        // Initial active state
        document.querySelector('.testimonial-dot')?.classList.add('active');

        // Update active dot on scroll
        const track = document.getElementById('testimonial-track');
        if (track) {
          track.addEventListener('scroll', () => {
            const index = Math.round(track.scrollLeft / track.offsetWidth);
            document.querySelectorAll('.testimonial-dot').forEach((d, i) => {
              d.classList.toggle('active', i === index);
            });
          });
        }
      </script>
    </div>
  </section>

  <!-- BLOG PREVIEW -->
  <section class="section" aria-labelledby="blog-heading">
    <div class="container">
      <header class="section-header">
        <div class="flex-between" style="flex-wrap:wrap;gap:var(--space-4)">
          <div>
            <span class="section-label">Latest Insights</span>
            <h2 id="blog-heading" class="section-title">From the Journal</h2>
          </div>
          <a href="/blog/" class="btn btn--secondary">View All Posts â†’</a>
        </div>
      </header>
      <div class="grid-3">
        {recentPosts.map(p => <BlogCard {...p} />)}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section section--alt" aria-labelledby="faq-heading">
    <div class="container container--narrow">
      <header class="section-header text-center">
        <span class="section-label">FAQ</span>
        <h2 id="faq-heading" class="section-title">Common Questions</h2>
      </header>
      <div class="faq-list">
        <details class="faq-item">
          <summary class="faq-item__q">What does DURIAN Travel actually do?</summary>
          <p class="faq-item__a">We're a travel planning consultancy. We build complete trip plans â€” itinerary, accommodation, transport, checklists, budgets â€” and provide 1-on-1 support throughout. We also help with Schengen visa document preparation.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">Do you book flights and hotels?</summary>
          <p class="faq-item__a">We research and recommend the best options for your budget and route. We can coordinate bookings or guide you through doing it yourself â€” whichever you prefer.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">How fast do you respond?</summary>
          <p class="faq-item__a">Within hours. Active clients have direct access to our team. No ticketing systems, no waiting days for a reply.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">Can you help with my Schengen visa?</summary>
          <p class="faq-item__a">Yes â€” visa document review is one of our services. We check your documents, flag gaps, and help you prepare. We're not lawyers and don't guarantee approval, but we make sure your application is as strong as possible.</p>
        </details>
        <details class="faq-item">
          <summary class="faq-item__q">How much do your services cost?</summary>
          <p class="faq-item__a">Services start from â‚¬29. Full trip planning packages depend on the complexity of your trip. Book a free 15-minute call and we'll give you a clear quote.</p>
        </details>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTABanner
    title="Ready to plan your trip?"
    subtitle="Book a free 15-minute call. Tell us where you want to go â€” we'll show you what we can do."
    cta="Book Free Call"
  />

</BaseLayout>

<style>
/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   HERO â€” Full-bleed with floating glass cards
   â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  color: white;
  overflow: hidden;
  padding-top: 80px; /* Account for fixed header if any */
}

@media (max-width: 900px) {
  .hero {
    min-height: auto;
    padding-top: 80px;
    padding-bottom: var(--space-8);
  }
}

@media (max-width: 768px) {
  .hero {
    min-height: auto;
    height: auto;
    padding-top: 60px;
    padding-bottom: var(--space-4);
  }
}

.hero__bg-full {
  position: absolute;
  inset: 0;
  z-index: 0;
}
.hero__bg-full img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.hero__overlay-dark {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to right,
    rgba(15, 33, 56, 0.85) 0%,
    rgba(15, 33, 56, 0.4) 50%,
    rgba(15, 33, 56, 0.2) 100%
  );
}

.hero__grid {
  position: relative;
  z-index: 1;
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  align-items: center;
  gap: var(--space-8);
  width: 100%;
}
@media (max-width: 992px) {
  .hero__grid {
    grid-template-columns: 1fr;
    text-align: center;
    padding-bottom: var(--space-12);
  }
}

@media (max-width: 768px) {
  .hero__grid {
    padding-bottom: 0;
    gap: var(--space-4);
  }
}

/* Left: Info */
.hero__badge {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  background: var(--color-accent);
  color: white;
  padding: 6px 16px;
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  letter-spacing: 0.1em;
  margin-bottom: var(--space-6);
  box-shadow: 0 4px 12px rgba(196, 75, 54, 0.3);
}
@media (max-width: 992px) { .hero__badge { margin-inline: auto; } }

.hero__title {
  font-family: var(--font-serif);
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 400;
  line-height: 1.1;
  margin-bottom: var(--space-6);
  color: white;
}
@media (max-width: 768px) {
  .hero__title {
    font-size: clamp(2rem, 8vw, 2.5rem);
    margin-bottom: var(--space-3);
  }
}
.hero__title-glow {
  color: #FFFFFF;
  text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
}

.hero__description {
  font-size: var(--text-lg);
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
  margin-bottom: var(--space-10);
  max-width: 500px;
}
@media (max-width: 992px) { .hero__description { margin-inline: auto; } }
@media (max-width: 768px) {
  .hero__description {
    font-size: var(--text-base);
    margin-bottom: var(--space-6);
  }
}

.hero__buttons {
  display: flex;
  align-items: center;
  gap: var(--space-6);
}
@media (max-width: 992px) { .hero__buttons { justify-content: center; } }
@media (max-width: 768px) { 
  .hero__buttons { 
    gap: var(--space-4); 
    flex-wrap: wrap; 
  } 
}

.btn-primary {
  background: white;
  color: var(--color-navy);
  padding: 14px 32px;
  border-radius: var(--radius-full);
  font-weight: var(--font-bold);
  text-decoration: none;
  transition: all var(--transition-normal);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}
@media (max-width: 768px) {
  .btn-primary {
    padding: 12px 24px;
    font-size: var(--text-sm);
  }
}
.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
}

.btn-video {
  background: transparent;
  border: none;
  color: white;
  display: flex;
  align-items: center;
  gap: var(--space-3);
  font-weight: var(--font-semibold);
  cursor: pointer;
  padding: 0;
}
.btn-video__icon {
  width: 48px;
  height: 48px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all var(--transition-normal);
  backdrop-filter: blur(4px);
  background: rgba(255, 255, 255, 0.1);
}
.btn-video:hover .btn-video__icon {
  background: white;
  color: var(--color-navy);
  border-color: white;
}

/* Right: Visuals */
.hero__visuals {
  position: relative;
  height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
}
@media (max-width: 992px) {
  .hero__visuals {
    height: 400px;
    margin-top: var(--space-8);
  }
}
@media (max-width: 768px) {
  .hero__visuals {
    height: 280px;
    margin-top: var(--space-6);
  }
}

.glass-card {
  position: absolute;
  width: 280px;
  border-radius: var(--radius-xl);
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  transition: all var(--transition-slow);
}
.glass-card img {
  width: 100%;
  height: 320px;
  object-fit: cover;
  display: block;
}
.glass-card__info {
  padding: var(--space-4);
}
.glass-card__location {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  margin: 0;
}

.glass-card--1 {
  transform: translateX(-40px) translateY(-20px) rotate(-4deg);
  z-index: 2;
}
.glass-card--2 {
  transform: translateX(80px) translateY(30px) rotate(4deg);
  z-index: 1;
  opacity: 0.8;
}
.hero__visuals:hover .glass-card--1 {
  transform: translateX(-60px) translateY(-40px) rotate(-6deg);
}
.hero__visuals:hover .glass-card--2 {
  transform: translateX(100px) translateY(50px) rotate(6deg);
  opacity: 1;
}

/* Mobile adjustments for postcards */
@media (max-width: 768px) {
  .glass-card {
    width: 200px;
  }
  .glass-card img {
    height: 240px;
  }
  .glass-card--1 {
    transform: translateX(-20px) translateY(-10px) rotate(-4deg);
  }
  .glass-card--2 {
    transform: translateX(40px) translateY(20px) rotate(4deg);
  }
  .hero__visuals:hover .glass-card--1 {
    transform: translateX(-30px) translateY(-20px) rotate(-6deg);
  }
  .hero__visuals:hover .glass-card--2 {
    transform: translateX(50px) translateY(30px) rotate(6deg);
  }
}

.hero-link {
  text-decoration: none;
  display: block;
  color: inherit;
  cursor: pointer;
}

.hero-link-overlay {
  position: absolute;
  inset: 0;
  background: rgba(15, 33, 56, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity var(--transition-normal);
  z-index: 10;
}

.hero-link:hover .hero-link-overlay,
.hero-link:focus .hero-link-overlay {
  opacity: 1;
}

.explore-btn {
  background: var(--color-accent);
  color: white;
  padding: 10px 24px;
  border-radius: var(--radius-full);
  font-weight: var(--font-bold);
  font-size: var(--text-sm);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transform: translateY(10px);
  transition: transform var(--transition-normal);
}

.hero-link:hover .explore-btn,
.hero-link:focus .explore-btn {
  transform: translateY(0);
}

.hero__social {
  display: flex;
  gap: var(--space-4);
}
.hero__social a {
  width: 36px;
  height: 36px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: white;
  text-decoration: none;
