---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import CTABanner from '../../components/CTABanner.astro';

const services = [
  {
    icon: 'üìû',
    title: 'Visa Strategy Call',
    description: 'A focused 60-minute 1-on-1 call to review your entire visa application plan ‚Äî documents, cover letter, financial proof, itinerary, and timeline.',
    href: '/services/visa-strategy-call/',
    tags: ['60 min', '1-on-1', 'Strategy'],
    price: '‚Ç¨79',
  },
  {
    icon: 'üìÑ',
    title: 'Document Checklist Review',
    description: 'We check every document in your visa package against the embassy\'s published requirements and flag gaps, inconsistencies, or weak points.',
    href: '/services/document-review/',
    tags: ['Checklist', 'Gap Analysis'],
    price: '‚Ç¨29',
  },
  {
    icon: 'üó∫Ô∏è',
    title: 'Itinerary Building',
    description: 'We help you build a visa-compliant travel itinerary that aligns with your accommodation, financial proof, and stated purpose of travel.',
    href: '/services/itinerary-building/',
    tags: ['Planning', 'Structure'],
    price: '‚Ç¨49',
  },
  {
    icon: 'üíä',
    title: 'Travel Health Consult',
    description: 'Pre-trip health preparation: which medications need prescriptions in Europe, vaccine requirements, pharmacy access, and what to pack in your travel kit.',
    href: '/services/travel-health-consult/',
    tags: ['Health', 'Preparation'],
    price: '‚Ç¨39',
  },
];

const serviceSchema = services.map(s => ({
  "@context": "https://schema.org",
  "@type": "Service",
  "name": s.title,
  "description": s.description,
  "provider": {
    "@type": "Organization",
    "name": "DURIAN Travel",
    "url": "https://www.duriantravel.com"
  },
  "url": `https://www.duriantravel.com${s.href}`,
  "offers": {
    "@type": "Offer",
    "price": s.price.replace('‚Ç¨', ''),
    "priceCurrency": "EUR"
  }
}));

const breadcrumb = [
  { name: 'Services', url: 'https://www.duriantravel.com/services/' }
];
---

<BaseLayout
  title="Visa & Travel Services ‚Äî DURIAN Travel"
  description="Visa strategy services: document review, cover letters, itineraries, financial proof, and refusal analysis."
  breadcrumb={breadcrumb}
  schema={serviceSchema}
>

  <section class="hero-sm hero-gradient">
    <div class="container">
      <span class="section-label" style="color:var(--color-accent-light)">Our Services</span>
      <h1 class="hero-sm__title" style="color:white">Expert Guidance, Not Empty Promises</h1>
      <p class="hero-sm__subtitle">
        We educate and empower. We don't submit applications on your behalf and we don't guarantee outcomes.
        Each service is designed to help you present the strongest possible application.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="notice notice--info mb-8">
        <span>üìã</span>
        <p>
          <strong>Not sure where to start?</strong>
          Book a <a href="/free-visa-audit/" class="link">free 15-minute audit</a> first.
          We'll review your situation and recommend the right service.
        </p>
      </div>

      <div class="services-grid">
        {services.map(s => (
          <div class="service-full-card">
            <div class="service-full-card__header">
              <span class="service-full-card__icon">{s.icon}</span>
              <div>
                <h2 class="service-full-card__title">{s.title}</h2>
                <div class="service-full-card__tags">
                  {s.tags.map(t => <span class="tag">{t}</span>)}
                </div>
              </div>
            </div>
            <p class="service-full-card__desc">{s.description}</p>
            <div class="service-full-card__footer">
              <span class="service-full-card__price">Starting at {s.price}</span>
              <a href={s.href} class="btn btn--primary btn--sm">Learn More ‚Üí</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What's included across all services -->
  <section class="section section--tinted">
    <div class="container container--narrow">
      <header class="section-header text-center">
        <span class="section-label">What's Included</span>
        <h2 class="section-title">Every Service Comes With</h2>
      </header>
      <div class="grid-3">
        <div class="feature-mini">
          <span class="feature-mini__icon">üìù</span>
          <h3 class="feature-mini__title">Written Summary</h3>
          <p class="feature-mini__desc">Actionable notes and next steps delivered after every session.</p>
        </div>
        <div class="feature-mini">
          <span class="feature-mini__icon">üîí</span>
          <h3 class="feature-mini__title">Confidential</h3>
          <p class="feature-mini__desc">Your personal information is handled securely and never shared.</p>
        </div>
        <div class="feature-mini">
          <span class="feature-mini__icon">‚ö°</span>
          <h3 class="feature-mini__title">24h Turnaround</h3>
          <p class="feature-mini__desc">Document reviews completed within 24 hours of submission.</p>
        </div>
      </div>
    </div>
  </section>

  <CTABanner />

</BaseLayout>

<style>
.hero-sm { padding-block: var(--space-16); }
.hero-sm__title { font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl)); margin-bottom: var(--space-4); }
.hero-sm__subtitle { font-size: var(--text-lg); color: hsl(150 30% 75%); max-width: 60ch; line-height: var(--leading-relaxed); }

.services-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-6);
}
@media (max-width: 768px) { .services-grid { grid-template-columns: 1fr; } }

.service-full-card {
  background: white;
  border: 1px solid var(--color-border);
  border-radius: var(--radius-xl);
  padding: var(--space-8);
  display: flex;
  flex-direction: column;
  gap: var(--space-5);
  transition: box-shadow var(--transition-normal), transform var(--transition-normal);
}
.service-full-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); }
.service-full-card__header { display: flex; align-items: flex-start; gap: var(--space-4); }
.service-full-card__icon { font-size: 2rem; }
.service-full-card__title { font-size: var(--text-xl); font-weight: var(--font-bold); margin-bottom: var(--space-2); }
.service-full-card__tags { display: flex; gap: var(--space-2); flex-wrap: wrap; }
.service-full-card__desc { font-size: var(--text-base); line-height: var(--leading-relaxed); color: var(--color-text-muted); flex: 1; }
.service-full-card__footer { display: flex; align-items: center; justify-content: space-between; padding-top: var(--space-4); border-top: 1px solid var(--color-border); }
.service-full-card__price { font-size: var(--text-lg); font-weight: var(--font-bold); color: var(--color-primary); }

.feature-mini { text-align: center; }
.feature-mini__icon { font-size: 2rem; display: block; margin-bottom: var(--space-3); }
.feature-mini__title { font-size: var(--text-base); font-weight: var(--font-semibold); margin-bottom: var(--space-2); }
.feature-mini__desc { font-size: var(--text-sm); color: var(--color-text-muted); line-height: var(--leading-relaxed); }
</style>
